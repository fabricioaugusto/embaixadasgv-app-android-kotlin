<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.Create.CreatePostActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp"
            android:gravity="center" android:id="@+id/linearLayout6" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/btPostPublish" app:layout_constraintVertical_chainStyle="packed">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:srcCompat="@drawable/article_picture"
                android:id="@+id/imgPostInsertPic" android:adjustViewBounds="true"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_photo_library_grey_light"
                android:id="@+id/btPostInsertPic"
                android:background="@drawable/bg_circular_blue" android:padding="16dp"
                android:layout_marginTop="-48dp"/>
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Descrição da foto" android:textColor="@color/colorText"
                    android:id="@+id/etPostDescription"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
            android:text="Publicar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btPostPublish"
            app:finalCornerAngle="50dp"
            app:initialCornerAngle="0dp"
            app:spinning_bar_color="#FFF"
            app:spinning_bar_padding="6dp"
            android:background="@drawable/bg_circular_progressbar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp" android:textColor="@color/colorGrey"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginTop="48dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>