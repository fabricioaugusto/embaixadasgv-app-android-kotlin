<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:paddingTop="16dp" android:paddingBottom="12dp"
              android:paddingRight="16dp" android:paddingLeft="16dp">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:gravity="center_vertical"
            android:layout_marginBottom="12sp">
        <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imgAdPostUser"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/avatar"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFF" android:layout_marginRight="8dp"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="1">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:gravity="center_vertical">
                <TextView
                        android:text="Fabrício Augusto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/txtAdPostUserName"
                        android:textColor="@color/colorText" android:layout_marginRight="6dp" android:textStyle="bold"/>
                <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp" app:srcCompat="@drawable/ic_profile_verified"
                        android:id="@+id/imgProfileVerified" android:layout_marginTop="1dp" tools:visibility="gone"/>
            </LinearLayout>
            <TextView
                    android:text="26 Oct 2018"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txtAdPostDate"
                    android:textColor="@color/colorSubText" android:layout_marginTop="-2dp"/>
        </LinearLayout>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_more_vert_grey"
                android:id="@+id/btAdPostOptions" android:background="@android:color/transparent"
                android:padding="8dp"/>
    </LinearLayout>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/imgAdPostPicture" android:scaleType="centerCrop" android:visibility="gone"/>
    <TextView
            android:text="No início, eles duvidam e fazem chacota. Depois de seu sucesso, dão tapinhas nas costas e dizem que sempre acreditaram em você. "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/txtAdPostText" android:textSize="24sp"
            android:textColor="@color/colorText" android:layout_marginBottom="16dp" android:clickable="true"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:gravity="center_vertical">
        <com.like.LikeButton
                app:icon_type="heart"
                app:icon_size="25dp"
                android:id="@+id/btLikeButton"
                android:layout_width="30dp"
                android:layout_height="30dp" app:liked="false"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txtAdPostLikes"
                android:gravity="center_vertical" android:layout_marginLeft="4dp"
                android:textColor="@color/colorText" android:textStyle="bold" tools:visibility="visible"/>
        <ImageButton
                app:srcCompat="@drawable/ic_comment_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btAdThoughtComment"
                android:background="@color/backgroundGrey"
                android:layout_marginLeft="16dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txtAdPostComments"
                android:textColor="@color/colorText" android:textStyle="bold" android:textSize="18sp"/>
    </LinearLayout>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/txtAdPostTitle" android:visibility="gone"/>

</LinearLayout>