<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp" android:paddingTop="8dp" android:paddingRight="16dp" android:paddingBottom="8dp"
            android:gravity="center_vertical">

        <ImageView
                android:id="@+id/imgAdNotificationProfile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/avatar"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:gravity="center_vertical"
                android:layout_weight="1" android:paddingBottom="8dp"
                android:paddingRight="16dp" android:paddingLeft="12dp">
            <TextView
                    android:text="Nome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txtAdNotificationTitle"
                    android:textColor="@color/colorText" android:textSize="16sp" android:layout_weight="1"/>
            <TextView
                    android:text="01/11/2019"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txtAdNotificationDate"
                    android:textColor="@color/colorSubText"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>