<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:paddingTop="8dp" android:paddingBottom="8dp">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="center_vertical">
        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgAdCommentUser"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/avatar"
        />
        <TextView
                android:id="@+id/txtAdCommentUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:text="Fabrício Augusto"
                android:textColor="@color/colorText"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight="1"/>
        <ImageView
                android:id="@+id/imageView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:srcCompat="@drawable/ic_more_vert_grey"
        />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/linearLayout9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical"
    >

        <TextView
                android:id="@+id/txtAdComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/backgroundGrey"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:text="Algum comentário poderá ficar longo"
                android:textColor="@color/colorText"
                android:textSize="15sp"
        />
    </LinearLayout>
    <TextView
            android:id="@+id/txtAdCommentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="22/08/2018 às 15:23"
            android:textColor="#964b5358"
            android:textSize="12sp"
    />

</LinearLayout>