<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:paddingTop="12dp" android:paddingBottom="12dp"
              android:background="@drawable/bg_card_square"
              android:layout_marginTop="@dimen/keyline_1_minus_8dp">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="center_vertical"
            android:layout_marginLeft="12dp" android:layout_gravity="center_vertical">
        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgAdCommentUser"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/avatar"
        />
        <TextView
                android:id="@+id/txtAdCommentUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:text="Fabrício Augusto"
                android:textColor="@color/colorText"
                android:textSize="14sp"
                android:textStyle="bold"/>
        <TextView
                android:id="@+id/txtAdCommentDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-  22/08/2018 às 15:23"
                android:textColor="#964b5358"
                android:textSize="12sp"
                android:layout_marginLeft="6dp" android:layout_weight="1"/>
        <ImageButton
                android:id="@+id/btAdCommentOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:srcCompat="@drawable/ic_more_vert_grey"
                android:background="@android:color/transparent" android:paddingLeft="6dp"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/linearLayout9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginRight="12dp"
            android:orientation="vertical"
            android:layout_marginLeft="12dp">

        <TextView
                android:id="@+id/txtAdComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:text="Algum comentário poderá ficar longo"
                android:textColor="@color/colorText"
                android:textSize="16sp"
                android:layout_marginLeft="33dp" android:lineSpacingMultiplier="1.1"/>
    </LinearLayout>

</LinearLayout>