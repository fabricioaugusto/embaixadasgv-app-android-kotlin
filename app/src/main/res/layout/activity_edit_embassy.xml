<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.Edit.EditEmbassyActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/linearLayout13"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp" android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp"
            android:gravity="right">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:gravity="right" android:layout_marginBottom="24dp"
                android:background="@drawable/bg_screen_tutorial" android:id="@+id/layoutAlertInfo">
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_close_blue"
                    android:id="@+id/imageButton" android:background="@android:color/transparent"
                    android:layout_marginTop="6dp" android:layout_marginRight="6dp"/>
            <TextView
                    android:text="Preencha os campos com os dados solicitados para editar as informações de sua embaixada e, caso queira trocar a foto de capa, toque na imagem abaixo."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView32"
                    android:paddingLeft="12dp" android:paddingRight="24dp" android:paddingTop="8dp"
                    android:paddingBottom="12dp" android:textColor="@color/colorLink"
                    android:layout_marginTop="-24dp"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
            android:layout_width="0dp"
            android:layout_height="160dp" app:srcCompat="@drawable/bg_upload_image"
            android:id="@+id/imgEditEmbassyCover"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" android:layout_marginRight="32dp" android:layout_marginEnd="32dp"
            android:scaleType="centerCrop" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout13"/>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textInputLayout6"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/imgEditEmbassyCover"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome" android:id="@+id/etEditEmbassyName"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textInputLayout4" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout6" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp">

        <com.santalu.maskedittext.MaskEditText
                android:id="@+id/etEditEmbassyPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Whatsapp"
                android:inputType="phone"
                app:met_mask="(##)#####-####"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textInputLayout5" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E-mail" android:id="@+id/etEditEmbassyEmail"/>
    </com.google.android.material.textfield.TextInputLayout>

    <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
            android:text="Salvar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:finalCornerAngle="50dp"
            app:initialCornerAngle="0dp"
            app:spinning_bar_color="#FFF"
            app:spinning_bar_padding="6dp"
            android:background="@drawable/bg_circular_progressbar"
            android:id="@+id/btEditEmbassySava"
            android:textColor="@color/colorGrey" app:layout_constraintTop_toBottomOf="@+id/textInputLayout5"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp" android:layout_marginTop="24dp"
            android:layout_marginRight="32dp" android:layout_marginEnd="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>