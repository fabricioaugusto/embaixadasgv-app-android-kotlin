<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:paddingTop="16dp" android:paddingBottom="12dp"
              android:background="@color/backgroundGrey" android:paddingRight="16dp" android:paddingLeft="16dp">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:gravity="center_vertical"
            android:layout_marginBottom="12sp">
        <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imgAdPostUser"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFF" android:layout_marginRight="8dp"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="1">
            <TextView
                    android:text="Fabrício Augusto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txtAdPostUserName"
                    android:textColor="@color/colorText"/>
            <TextView
                    android:text="26 Oct 2018"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txtAdPostDate"
                    android:textColor="@color/colorSubText" android:layout_marginTop="-2dp"/>
        </LinearLayout>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_more_vert_grey"
                android:id="@+id/imageButton2" android:background="@android:color/transparent"
                android:padding="8dp"/>
    </LinearLayout>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/imgAdPostPicture" android:adjustViewBounds="false"
            android:layout_marginBottom="16dp" android:scaleType="centerCrop"/>
    <TextView
            android:text="The Different Methods Of Hair Removal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/txtAdPostTitle" android:textSize="16sp"
            android:textStyle="bold" android:textColor="@color/colorText" android:layout_marginBottom="4dp"/>
    <TextView
            android:text="We have witnessed quite a paradigm shift in the way we see nutrition over the last few decades. The “one size fits all” nutritional supplement is no longer adequate, as we are now becoming more aware of the fact that each individual has different health needs and concerns. "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/txtAdPostText"
            android:textColor="@color/colorText" android:textSize="15sp" android:clickable="true"
            android:maxLength="300"/>
    <TextView
            android:text="Continue Lendo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/txtAdArticleRead" android:paddingTop="16dp"
            android:paddingBottom="16dp" android:textAllCaps="true" android:textColor="@color/colorLink"
            android:textStyle="bold"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:gravity="center_vertical">
        <com.like.LikeButton
                app:icon_type="heart"
                app:icon_size="25dp"
                android:id="@+id/btLikeButton"
                android:layout_width="30dp"
                android:layout_height="30dp" app:liked="false"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txtAdPostLikes"
                android:gravity="center_vertical" android:layout_marginLeft="4dp"
                android:textColor="@color/colorText" android:textStyle="bold" android:textSize="16sp"/>
        <ImageButton
                android:src="@drawable/ic_comment_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btAdArticleComment"
                android:background="@color/backgroundGrey" android:padding="6dp"
                android:layout_marginLeft="16dp"/>
        <TextView
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txtAdArticleComments"
                android:textColor="@color/colorText" android:textStyle="bold" android:textSize="16sp"/>
    </LinearLayout>
</LinearLayout>