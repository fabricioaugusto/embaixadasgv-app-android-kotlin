<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <View
            android:layout_width="40dp"
            android:layout_height="40dp" android:id="@+id/view" android:background="@color/colorSkeleton"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <View
            android:layout_width="200dp"
            android:layout_height="15dp"
            android:id="@+id/view2" android:background="@color/colorSkeleton"
            app:layout_constraintStart_toEndOf="@+id/view" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="@+id/view"/>
    <View
            android:layout_width="100dp"
            android:layout_height="15dp" android:id="@+id/view3"
            app:layout_constraintTop_toBottomOf="@+id/view2" app:layout_constraintStart_toEndOf="@+id/view"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:background="@color/colorSkeleton"
            android:layout_marginTop="6dp"/>
    <View
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:id="@+id/view4" android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="16dp" android:layout_marginEnd="16dp"
            android:background="@color/colorSkeleton"/>
    <View
            android:layout_width="0dp"
            android:layout_height="15dp" android:id="@+id/view5" app:layout_constraintTop_toBottomOf="@+id/view4"
            android:layout_marginTop="12dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp" android:background="@color/colorSkeleton"/>
    <View
            android:layout_width="0dp"
            android:layout_height="15dp" android:id="@+id/view6" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/view5"
            android:layout_marginTop="6dp" android:background="@color/colorSkeleton" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginRight="64dp" android:layout_marginEnd="64dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>