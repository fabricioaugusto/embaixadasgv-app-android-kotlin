<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.Menu.EmbassiesForApprovalActivity">
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/recyclerEmbassyList"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" android:paddingTop="32dp" android:paddingBottom="32dp"
            android:paddingRight="24dp" android:paddingLeft="24dp" android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true" android:background="@color/backgroundModal"
            android:gravity="center" android:clickable="true" android:visibility="gone"
            android:id="@+id/layoutToughtModal" android:focusable="true" android:alpha="0"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    >
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:background="@color/backgroundGrey"
                android:paddingLeft="24dp" android:paddingRight="24dp" android:paddingTop="32dp"
                android:paddingBottom="32dp" android:id="@+id/layoutToughtPublish" android:clickable="true"
                android:visibility="gone" android:focusable="true" android:gravity="center_horizontal">
            <TextView
                    android:text="Embaixada Geralçao de Valor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txtApprEmbassyName"
                    android:textColor="@color/colorText" android:textStyle="bold" android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:text="Líder: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView31"
                        android:textStyle="bold" android:textColor="@color/colorText"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/txtApprEmbassyLeader"
                        android:layout_weight="1"
                        android:textColor="@color/colorText" tools:text="José das Couves"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:text="Cidade: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView36"
                        android:textStyle="bold" android:textColor="@color/colorText"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/txtApprEmbassyCity"
                        android:layout_weight="1"
                        android:textColor="@color/colorText" tools:text="Ipatinga - MG"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:text="E-mail: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView33"
                        android:textStyle="bold" android:textColor="@color/colorText"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/txtApprEmbassyEmail"
                        android:layout_weight="1"
                        android:textColor="@color/colorText" tools:text="jose@gmail.com"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:text="Telefone: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView35"
                        android:textStyle="bold" android:textColor="@color/colorText"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/txtApprEmbassyPhone"
                        android:layout_weight="1"
                        android:textColor="@color/colorText" tools:text="31986850632"/>
            </LinearLayout>
            <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
                    android:text="Aprovar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btEmbassyApprove"
                    app:finalCornerAngle="50dp"
                    app:initialCornerAngle="0dp"
                    app:spinning_bar_color="#FFF"
                    app:spinning_bar_padding="6dp"
                    android:background="@drawable/bg_circular_progressbar"
                    android:textColor="@color/backgroundGrey"
                    android:layout_marginTop="16dp"/>
            <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
                    android:text="Liberar para a lista"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btEmbassyRelease"
                    app:finalCornerAngle="50dp"
                    app:initialCornerAngle="0dp"
                    app:spinning_bar_color="#FFF"
                    app:spinning_bar_padding="6dp"
                    android:background="@drawable/bg_circular_progressbar_blue"
                    android:textColor="@color/backgroundGrey"
                    android:layout_marginTop="16dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>