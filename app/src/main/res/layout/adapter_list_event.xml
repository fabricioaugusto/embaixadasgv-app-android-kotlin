<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
            app:cardElevation="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp" android:layout_marginTop="6dp">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="@drawable/bg_card_square"
                android:paddingBottom="4dp">
            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                               android:layout_height="wrap_content">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="190dp" app:srcCompat="@drawable/bg_default_cover"
                        android:id="@+id/imgAdEventCover" android:adjustViewBounds="false"
                        android:scaleType="centerCrop"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:paddingTop="8dp"
                    android:paddingBottom="@dimen/keyline_1_minus_8dp">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp" android:gravity="center">
                    <TextView
                            android:text="Abr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/txtAdEventMonthAbr"
                            android:gravity="center_horizontal" android:textAllCaps="true"
                            android:textStyle="bold" android:textSize="16sp"
                            android:textColor="@color/colorText"/>
                    <TextView
                            android:text="17"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/txtAdEventDate"
                            android:gravity="center_horizontal" android:textSize="42dp" android:textStyle="bold"
                            android:textColor="@color/colorRed" android:layout_marginTop="-8dp"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="terça-feira ás 19:30"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/txtAdEventTime"
                            android:textColor="@color/colorRed"
                            android:capitalize="sentences" android:textSize="12sp" android:textAllCaps="true"/>
                    <TextView
                            android:text="Gin Festival London 2017"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/txtAdEventTheme"
                            android:textColor="@color/colorText" android:textStyle="bold" android:textSize="18sp"
                            android:paddingRight="16dp"/>
                    <TextView
                            android:text="Embaixada Ipatinga - Ipatinga, MG"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/txtAdEventPlace"
                            android:drawableLeft="@drawable/ic_place_red" android:gravity="center_vertical"
                            android:textColor="@color/colorText"
                            android:drawablePadding="2dp" android:layout_marginTop="4dp" android:paddingRight="16dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            >
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>