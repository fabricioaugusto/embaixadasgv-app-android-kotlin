<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.Menu.AboutEmbassiesActivity">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="match_parent">

        <fragment android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  class="com.google.android.youtube.player.YouTubePlayerSupportFragment"
                  android:id="@+id/viewYouTubePlayer"
                  app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintEnd_toEndOf="parent" android:layout_marginLeft="16dp"
                  android:layout_marginStart="16dp" android:layout_marginRight="16dp" android:layout_marginEnd="16dp"
                  android:layout_marginTop="16dp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtAboutEmbassy"
                app:layout_constraintTop_toBottomOf="@+id/viewYouTubePlayer"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="32dp" android:textColor="@color/colorText" android:textSize="16sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>