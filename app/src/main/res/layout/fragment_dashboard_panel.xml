<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".fragment.dashboard.DashboardPanelFragment"
              android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" android:id="@+id/homeToolbar" app:contentInsetStart="0dp">
        <ImageView
                android:src="@drawable/horizontal_logo"
                android:layout_width="wrap_content"
                android:layout_height="28dp" android:id="@+id/imageView2" android:adjustViewBounds="true"
                android:layout_marginLeft="16dp"/>

    </androidx.appcompat.widget.Toolbar>
    <!-- TODO: Update blank fragment layout -->
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBarDashboard" android:layout_marginTop="32dp" tools:visibility="gone"/>
    <androidx.core.widget.NestedScrollView android:layout_width="match_parent" android:layout_height="match_parent"
                android:background="@color/backgroundGreyStrong" android:id="@+id/rootView"
                android:visibility="gone" tools:visibility="visible">
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:layout_height="match_parent">


            <TextView
                    android:text="Próxima reunião"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="16dp" android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                    android:textColor="@color/colorPrimary" android:textStyle="bold" android:textSize="16sp"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp" android:id="@+id/layoutDashboardEvent">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" tools:visibility="visible"
                        android:id="@+id/layoutNextEvent" android:clickable="true">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="75dp"
                            android:layout_height="match_parent" android:background="@drawable/bg_white_box"
                            android:layout_marginRight="4dp" android:gravity="center">
                        <TextView
                                android:text="Abr"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/txtMonthAbrDashboard"
                                android:gravity="center_horizontal" android:textAllCaps="true"
                                android:textStyle="bold" android:textSize="16sp"
                                android:textColor="@color/colorText"/>
                        <TextView
                                android:text="17"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/txtDashboardDate"
                                android:gravity="center_horizontal" android:textSize="36dp" android:textStyle="bold"
                                android:textColor="@color/colorRed" android:layout_marginTop="-8dp"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:background="@drawable/bg_white_box"
                            android:paddingLeft="12dp" android:paddingRight="12dp" android:paddingTop="8dp"
                            android:paddingBottom="8dp">
                        <TextView
                                android:text="Terça-feira, ás 19:30"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/txtDashboardTime"
                                android:textAllCaps="true" android:textSize="12sp" android:textColor="@color/colorRed"/>
                        <TextView
                                android:text="Design Thinking para Inovação de Negócios"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/txtDashboardTheme"
                                android:maxLines="1"
                                android:textStyle="bold" android:textColor="@color/colorText"/>
                        <TextView
                                android:text="Rio de Janeiro - RJ"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/txtDashboardLocation"
                                android:layout_marginTop="4dp" android:drawableLeft="@drawable/ic_place_red"
                                android:drawablePadding="4dp"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/txtDashboardNoEvent"
                        android:textColor="@color/colorText"
                        android:visibility="gone" android:text="No momento não há eventos previstos!"/>
            </LinearLayout>
            <TextView
                    android:text="Minha Embaixada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/layoutDashboardEvent"
                    android:textStyle="bold" android:textColor="@color/colorPrimary" android:textSize="16sp"
                    android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView6"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="12dp" android:layout_marginStart="12dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp" android:id="@+id/linearLayout8">
                <Button
                        android:text="Membros"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/btDashboardMembers"
                        android:layout_weight="1"
                        android:background="@drawable/bg_white_box" android:textSize="10sp"
                        android:layout_marginLeft="4dp" android:layout_marginRight="4dp"
                        android:textColor="@color/colorLink" android:drawableTop="@drawable/ic_group_blue"
                        android:paddingTop="20dp" android:paddingBottom="20dp"
                        style="?android:attr/borderlessButtonStyle" android:drawablePadding="3dp"/>
                <Button
                        android:text="Eventos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/btDashboardEvents"
                        android:layout_weight="1"
                        android:background="@drawable/bg_white_box" android:textSize="10sp"
                        android:layout_marginLeft="4dp" android:layout_marginRight="4dp"
                        android:textColor="@color/colorLink" android:drawableTop="@drawable/ic_date_blue"
                        android:paddingTop="20dp" android:paddingBottom="20dp"
                        style="?android:attr/borderlessButtonStyle" android:drawablePadding="3dp"/>
                <Button
                        android:text="Fotos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/btDashboardPhotos"
                        android:layout_weight="1"
                        android:background="@drawable/bg_white_box" android:textSize="10sp"
                        android:layout_marginLeft="4dp" android:layout_marginRight="4dp"
                        android:textColor="@color/colorLink" android:drawableTop="@drawable/ic_photo_library_blue"
                        android:paddingTop="20dp" android:paddingBottom="20dp"
                        style="?android:attr/borderlessButtonStyle" android:drawablePadding="3dp"/>
                <Button
                        android:text="Nuvem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/btDashboardCloud" android:layout_weight="1"
                        android:background="@drawable/bg_white_box" android:textSize="10sp"
                        android:layout_marginLeft="4dp" android:layout_marginRight="4dp"
                        android:textColor="@color/colorLink" android:drawableTop="@drawable/ic_cloud_upload_blue"
                        android:paddingTop="20dp" android:paddingBottom="20dp"
                        style="?android:attr/borderlessButtonStyle" android:drawablePadding="3dp"/>
            </LinearLayout>
            <TextView
                    android:text="Informativos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView15"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout8"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp" android:layout_marginTop="32dp" android:textSize="16sp"
                    android:textStyle="bold" android:textColor="@color/colorPrimary"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView15" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="32dp">
                <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/rvBulletinList"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>