<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.Menu.InvitesActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp" android:layout_marginTop="64dp" android:gravity="center_horizontal">
        <TextView
                android:text="Copiar Link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView14" android:textColor="@color/colorText"
                android:textSize="18sp" android:textAllCaps="true" android:textStyle="bold" android:gravity="center"/>
        <TextView
                android:text="https://embaixadasgv.app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txtInvitationLink"
                android:background="@drawable/bg_grey_round_retangle" android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="14dp" android:paddingRight="14dp" android:layout_marginTop="8dp"
                android:layout_marginBottom="32dp" android:textColor="@color/colorText"
                android:drawableRight="@drawable/ic_content_copy_black" android:clickable="true"/>
        <TextView
                android:text="Enviar convite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView2" android:gravity="center"
                android:textColor="@color/colorText" android:textAllCaps="true" android:textStyle="bold"
                android:textSize="18sp"/>
        <TextView
                android:text="Preencha com o e-mail e o nome da pessoa que deseja convidar para utilizar o aplicativo das embaixadas Geração de Valor!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView4" android:gravity="center"
                android:textColor="@color/colorText" android:layout_marginTop="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:hint="Nome" android:drawableLeft="@drawable/ic_person_grey" android:drawablePadding="8dp"
                    android:paddingBottom="16dp" android:id="@+id/etSendNameInvite" android:inputType="textPersonName"/>
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:hint="E-mail" android:drawableLeft="@drawable/ic_email_grey" android:drawablePadding="8dp"
                    android:paddingBottom="16dp" android:id="@+id/etSendEmailInvite"
                    android:inputType="textEmailAddress"/>
        </com.google.android.material.textfield.TextInputLayout>
        <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
                android:text="ENVIAR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btSendInvite"
                app:finalCornerAngle="50dp"
                app:initialCornerAngle="0dp"
                app:spinning_bar_color="#FFF"
                app:spinning_bar_padding="6dp"
                android:background="@drawable/bg_circular_progressbar"
                android:textColor="@color/colorGrey" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintBottom_toTopOf="@+id/tvForgotPassword" android:layout_marginTop="32dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>