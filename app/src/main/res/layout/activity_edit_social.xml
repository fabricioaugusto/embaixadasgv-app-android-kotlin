<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.Edit.EditSocialActivity">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center_horizontal" android:paddingLeft="32dp" android:paddingRight="32dp"
                android:paddingTop="32dp" android:paddingBottom="64dp" android:id="@+id/linearLayout5">


            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilEditSocialfb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilEditSocialws"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:paddingTop="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Whatsapp" android:id="@+id/etEditSocialws"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Facebook" android:id="@+id/etEditSocialfb"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilEditSocialinsta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:paddingTop="16dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Instagram" android:id="@+id/etEditSocialinsta"/>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilEditSocialin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:paddingTop="16dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Linkedin" android:id="@+id/etEditSocialin"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilEditSocialtt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:paddingTop="16dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Twitter" android:id="@+id/etEditSocialtt"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilEditSocialbe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:paddingTop="16dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Behance" android:id="@+id/etEditSocialbe"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilEditSocialgit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:paddingTop="16dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="GitHub" android:id="@+id/etEditSocialgit"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilEditSocialyt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:paddingTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Youtube" android:id="@+id/etEditSocialyt"/>
            </com.google.android.material.textfield.TextInputLayout>
            <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
                    android:text="Salvar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:finalCornerAngle="50dp"
                    app:initialCornerAngle="0dp"
                    app:spinning_bar_color="#FFF"
                    app:spinning_bar_padding="6dp"
                    android:background="@drawable/bg_circular_progressbar"
                    android:id="@+id/btEditSocialSavaData"
                    android:layout_marginTop="32dp"
                    android:textColor="@color/colorGrey"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>