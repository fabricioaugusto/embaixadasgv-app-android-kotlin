<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.Edit.EditSocialActivity">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center_horizontal" android:paddingLeft="32dp" android:paddingRight="32dp"
                android:paddingTop="32dp" android:paddingBottom="64dp" android:id="@+id/linearLayout5"
                android:focusableInTouchMode="true">


            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/layoutWhatsapp"
                    android:layout_marginBottom="6dp">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_social_whatsapp"
                        android:id="@+id/imageView6" android:layout_marginTop="8dp"
                        android:layout_marginRight="8dp"/>
                <com.santalu.maskedittext.MaskEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:met_mask="+55 (##) #####-####"
                        android:hint="+55" android:id="@+id/etEditSocialws" android:layout_marginBottom="8dp"
                        android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/layoutFacebook"
                    android:layout_marginBottom="6dp">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_social_facebook"
                        android:id="@+id/imageView8" android:adjustViewBounds="true"
                        android:layout_marginTop="4dp" android:layout_marginRight="8dp"/>
                <com.balloondigital.egvapp.utils.PrefixEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="usuario"
                        android:id="@+id/etEditSocialfb"
                        android:tag="facebook.com/" android:layout_marginBottom="12dp" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/layoutInstagram"
                    android:layout_marginBottom="6dp">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_social_instagram"
                        android:id="@+id/imageView9" android:adjustViewBounds="true"
                        android:layout_marginTop="4dp" android:layout_marginRight="8dp"/>
                <com.balloondigital.egvapp.utils.PrefixEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="usuario" android:id="@+id/etEditSocialinsta"
                        android:tag="instagram.com/" android:layout_marginBottom="12dp" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/layoutLinkedin"
                    android:layout_marginBottom="6dp">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_social_linkedin"
                        android:id="@+id/imageView10" android:adjustViewBounds="true"
                        android:layout_marginTop="4dp" android:layout_marginRight="8dp"/>
                <com.balloondigital.egvapp.utils.PrefixEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="usuario" android:id="@+id/etEditSocialin"
                        android:tag="linkedin.com/in/" android:layout_marginBottom="12dp" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/layoutTwitter"
                    android:layout_marginBottom="6dp">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_social_twitter"
                        android:id="@+id/imageView11" android:adjustViewBounds="true"
                        android:layout_marginTop="4dp" android:layout_marginRight="8dp"/>
                <com.balloondigital.egvapp.utils.PrefixEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="usuario"
                        android:id="@+id/etEditSocialtt"
                        android:tag="twitter.com/" android:layout_marginBottom="12dp" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/layoutBehance"
                    android:layout_marginBottom="6dp">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_social_behance"
                        android:id="@+id/imageView12" android:adjustViewBounds="true"
                        android:layout_marginTop="4dp" android:layout_marginRight="8dp"/>
                <com.balloondigital.egvapp.utils.PrefixEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="usuario"
                        android:id="@+id/etEditSocialbe"
                        android:tag="behance.com/" android:layout_marginBottom="12dp" android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/layoutGithub"
                    android:layout_marginBottom="6dp">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_social_github"
                        android:id="@+id/imageView13" android:adjustViewBounds="true"
                        android:layout_marginTop="4dp" android:layout_marginRight="8dp"/>
                <com.balloondigital.egvapp.utils.PrefixEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="usuario" android:id="@+id/etEditSocialgit"
                        android:tag="github.com/" android:layout_marginBottom="12dp" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/layoutYoutube"
                    android:layout_marginBottom="6dp">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_social_youtube"
                        android:id="@+id/imageView14" android:adjustViewBounds="true"
                        android:layout_marginTop="4dp" android:layout_marginRight="8dp"/>
                <com.balloondigital.egvapp.utils.PrefixEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Youtube" android:id="@+id/etEditSocialyt"
                        android:tag="youtube.com/channel/" android:layout_marginBottom="12dp"
                        android:layout_weight="1"/>
            </LinearLayout>
            <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
                    android:text="Salvar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:finalCornerAngle="50dp"
                    app:initialCornerAngle="0dp"
                    app:spinning_bar_color="#FFF"
                    app:spinning_bar_padding="6dp"
                    android:background="@drawable/bg_circular_progressbar"
                    android:id="@+id/btEditSocialSavaData"
                    android:layout_marginTop="32dp"
                    android:textColor="@color/colorGrey"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>