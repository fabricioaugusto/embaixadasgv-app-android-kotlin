<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.Menu.MenuActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="16dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintVertical_bias="1.0">
            <LinearLayout
                    android:id="@+id/layoutMenuUser"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:gravity="center_vertical"
                    android:paddingTop="8dp" android:paddingRight="16dp"
                    android:paddingBottom="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/imgMenuUserProfile"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/avatar"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FFF"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:padding="8dp" android:gravity="center_vertical">
                    <TextView
                            android:text="Nome"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/txtMenuUserName"
                            android:textStyle="bold"
                            android:textColor="@color/colorText" android:textSize="16sp"/>
                    <TextView
                            android:id="@+id/txtMenuViewProfile"
                            android:text="Visualizar perfil"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorSubText"/>
                </LinearLayout>

            </LinearLayout>
            <View
                    android:id="@+id/divider10"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
            />
            <TextView
                    android:text="Configurações de Perfil "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView21"
                    android:textColor="@color/colorText" android:textStyle="bold" android:textSize="16sp"
                    android:layout_marginBottom="8dp" android:layout_marginTop="8dp"/>
            <Button
                    android:text="Editar Perfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btMenuEditProfile"
                    android:background="@color/backgroundGrey" android:gravity="start|center_vertical"
                    android:textAllCaps="false" android:textColor="@color/colorText"
                    android:shadowColor="@color/backgroundGrey"/>
            <Button
                    android:text="Alerar foto de perfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btMenuChangePic"
                    android:background="@color/backgroundGrey" android:gravity="start|center_vertical"
                    android:textAllCaps="false" android:textColor="@color/colorText"
                    android:shadowColor="@color/backgroundGrey"/>
            <Button
                    android:text="Alterar Senha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btMenuChangePass"
                    android:background="@color/backgroundGrey" android:gravity="start|center_vertical"
                    android:textAllCaps="false" android:textColor="@color/colorText"
                    android:shadowColor="@color/backgroundGrey"/>
            <Button
                    android:text="Minhas Redes Sociais"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btMenuEditSocial"
                    android:background="@color/backgroundGrey" android:gravity="start|center_vertical"
                    android:textAllCaps="false" android:textColor="@color/colorText"
                    android:shadowColor="@color/backgroundGrey"/>
            <Button
                    android:text="Minha Embaixada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btMenuMyEmbassy"
                    android:background="@color/backgroundGrey" android:gravity="start|center_vertical"
                    android:textAllCaps="false" android:textColor="@color/colorText"
                    android:shadowColor="@color/backgroundGrey"/>
            <View
                    android:id="@+id/divider6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
            />
            <TextView
                    android:text="Eventos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView22"
                    android:textColor="@color/colorText" android:textStyle="bold" android:textSize="16sp"
                    android:layout_marginBottom="8dp" android:layout_marginTop="8dp"/>
            <Button
                    android:text="Configurações de privacidade "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btMenuManageEvents"
                    android:background="@color/backgroundGrey" android:gravity="start|center_vertical"
                    android:textAllCaps="false" android:textColor="@color/colorText"
                    android:shadowColor="@color/backgroundGrey"/>
            <Button
                    android:text="Políticas de privacidade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btMenuMyEvents"
                    android:background="@color/backgroundGrey" android:gravity="start|center_vertical"
                    android:textAllCaps="false" android:textColor="@color/colorText"
                    android:shadowColor="@color/backgroundGrey"/>
            <View
                    android:id="@+id/divider7"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
            />
            <TextView
                    android:text="Privacidade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView23"
                    android:textColor="@color/colorText" android:textStyle="bold" android:textSize="16sp"
                    android:layout_marginTop="8dp" android:layout_marginBottom="8dp"/>
            <Button
                    android:text="Configurações de privacidade "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btMenuManagePrivacy"
                    android:background="@color/backgroundGrey" android:gravity="start|center_vertical"
                    android:textAllCaps="false" android:textColor="@color/colorText"
                    android:shadowColor="@color/backgroundGrey"/>
            <Button
                    android:text="Políticas de privacidade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btMenuPrivacy"
                    android:background="@color/backgroundGrey" android:gravity="start|center_vertical"
                    android:textAllCaps="false" android:textColor="@color/colorText"
                    android:shadowColor="@color/backgroundGrey"/>
            <View
                    android:id="@+id/divider8"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
            />
            <TextView
                    android:text="Sobre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView24"
                    android:textColor="@color/colorText" android:textStyle="bold" android:textSize="16sp"
                    android:layout_marginTop="8dp" android:layout_marginBottom="8dp"/>
            <Button
                    android:text="Sobre as embaixadas "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btMenuAboutEmbassies"
                    android:background="@color/backgroundGrey" android:gravity="start|center_vertical"
                    android:textAllCaps="false" android:textColor="@color/colorText"
                    android:shadowColor="@color/backgroundGrey"/>
            <Button
                    android:text="Sobre o aplicativo "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btMenuAboutApp"
                    android:background="@color/backgroundGrey" android:gravity="start|center_vertical"
                    android:textAllCaps="false" android:textColor="@color/colorText"
                    android:shadowColor="@color/backgroundGrey"/>
            <Button
                    android:text="Sugira uma funcionalidade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btMenuSuggests"
                    android:background="@color/backgroundGrey" android:gravity="start|center_vertical"
                    android:textAllCaps="false" android:textColor="@color/colorText"
                    android:shadowColor="@color/backgroundGrey"/>
            <Button
                    android:text="Avalie o aplicativo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btMenuRate"
                    android:background="@color/backgroundGrey" android:gravity="start|center_vertical"
                    android:textAllCaps="false" android:textColor="@color/colorText"
                    android:shadowColor="@color/backgroundGrey"/>
            <View
                    android:id="@+id/divider9"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
            />
            <Button
                    android:text="Envie-nos uma mensagem "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btMenuSendMenssages"
                    android:background="@color/backgroundGrey" android:gravity="start|center_vertical"
                    android:textAllCaps="false" android:textColor="@color/colorText"
                    android:shadowColor="@color/backgroundGrey"/>
            <Button
                    android:text="Sair"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btMenuLogout"
                    android:background="@color/backgroundGrey" android:gravity="start|center_vertical"
                    android:textAllCaps="false" android:textColor="@color/colorText"
                    android:shadowColor="@color/backgroundGrey"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>