<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MenuActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="600dp">

        <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:theme="?attr/actionBarTheme"
                android:minHeight="?attr/actionBarSize" android:id="@+id/toolbar4"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/toolbar4" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="16dp">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:gravity="center_vertical"
                    android:paddingTop="8dp" android:paddingRight="16dp"
                    android:paddingBottom="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/imgSettingsUserProfile"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/avatar"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FFF"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:padding="8dp" android:gravity="center_vertical">
                    <TextView
                            android:text="Nome"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/txtSettingsUserName"
                            android:textStyle="bold"
                            android:textColor="@color/colorText" android:textSize="16sp"/>
                    <TextView
                            android:text="Visualizar perfil"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorSubText"/>
                </LinearLayout>

            </LinearLayout>
            <View
                    android:id="@+id/divider10"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
            />
            <TextView
                    android:text="Configurações de Perfil "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView21"
                    android:textColor="@color/colorText" android:textStyle="bold" android:textSize="16sp"/>
            <Button
                    android:text="Editar Perfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button4"
                    android:background="@color/backgroundGrey" android:gravity="start|center_vertical"
                    android:textAllCaps="false" android:textColor="@color/colorText"/>
            <Button
                    android:text="Alterar Senha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button5"
                    android:background="@color/backgroundGrey" android:gravity="start|center_vertical"
                    android:textAllCaps="false" android:textColor="@color/colorText"/>
            <Button
                    android:text="Minhas Redes Sociais"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button7"
                    android:background="@color/backgroundGrey" android:gravity="start|center_vertical"
                    android:textAllCaps="false" android:textColor="@color/colorText"/>
            <Button
                    android:text="Minha Embaixada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button8"
                    android:background="@color/backgroundGrey" android:gravity="start|center_vertical"
                    android:textAllCaps="false" android:textColor="@color/colorText"/>
            <View
                    android:id="@+id/divider6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
            />
            <TextView
                    android:text="Eventos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView22"
                    android:textColor="@color/colorText" android:textStyle="bold" android:textSize="16sp"/>
            <Button
                    android:text="Configurações de privacidade "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button10"
                    android:background="@color/backgroundGrey" android:gravity="start|center_vertical"
                    android:textAllCaps="false" android:textColor="@color/colorText"/>
            <Button
                    android:text="Políticas de privacidade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button9"
                    android:background="@color/backgroundGrey" android:gravity="start|center_vertical"
                    android:textAllCaps="false" android:textColor="@color/colorText"/>
            <View
                    android:id="@+id/divider7"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
            />
            <TextView
                    android:text="Privacidade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView23"
                    android:textColor="@color/colorText" android:textStyle="bold" android:textSize="16sp"/>
            <Button
                    android:text="Configurações de privacidade "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button11"
                    android:background="@color/backgroundGrey" android:gravity="start|center_vertical"
                    android:textAllCaps="false" android:textColor="@color/colorText"/>
            <Button
                    android:text="Políticas de privacidade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button12"
                    android:background="@color/backgroundGrey" android:gravity="start|center_vertical"
                    android:textAllCaps="false" android:textColor="@color/colorText"/>
            <View
                    android:id="@+id/divider8"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
            />
            <TextView
                    android:text="Sobre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView24"
                    android:textColor="@color/colorText" android:textStyle="bold" android:textSize="16sp"/>
            <Button
                    android:text="Sobre as embaixadas "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button14"
                    android:background="@color/backgroundGrey" android:gravity="start|center_vertical"
                    android:textAllCaps="false" android:textColor="@color/colorText"/>
            <Button
                    android:text="Sobre o aplicativo "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button13"
                    android:background="@color/backgroundGrey" android:gravity="start|center_vertical"
                    android:textAllCaps="false" android:textColor="@color/colorText"/>
            <Button
                    android:text="Sugira uma funcionalidade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button15"
                    android:background="@color/backgroundGrey" android:gravity="start|center_vertical"
                    android:textAllCaps="false" android:textColor="@color/colorText"/>
            <Button
                    android:text="Avalie o aplicativo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button16"
                    android:background="@color/backgroundGrey" android:gravity="start|center_vertical"
                    android:textAllCaps="false" android:textColor="@color/colorText"/>
            <View
                    android:id="@+id/divider9"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
            />
            <Button
                    android:text="Envie-nos uma mensagem "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button17"
                    android:background="@color/backgroundGrey" android:gravity="start|center_vertical"
                    android:textAllCaps="false" android:textColor="@color/colorText"/>
            <Button
                    android:text="Sair"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button18"
                    android:background="@color/backgroundGrey" android:gravity="start|center_vertical"
                    android:textAllCaps="false" android:textColor="@color/colorText"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>