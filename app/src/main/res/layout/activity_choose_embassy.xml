<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.Edit.ChooseEmbassyActivity" android:background="@color/colorPrimary">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="42dp" android:layout_marginStart="42dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="42dp" android:layout_marginRight="42dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
                android:src="@drawable/logo"
                android:layout_width="match_parent"
                android:layout_height="120dp" android:id="@+id/imageView5" android:adjustViewBounds="true"
                android:layout_marginBottom="32dp"/>
        <TextView
                android:text="Selecione a embaixa em que você participa:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView25"
                android:textColor="@color/colorGrey" android:textSize="16sp" android:gravity="center"
                android:paddingTop="16dp" android:paddingBottom="16dp"/>
        <Button
                android:text="Escolha o estado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btChooseEmbasyState"
                android:background="@color/backgroundGrey" android:layout_marginBottom="16dp"
                android:drawableRight="@drawable/ic_arrow_down_grey" android:paddingRight="16dp"
                android:paddingLeft="16dp" android:visibility="gone"/>
        <Button
                android:text="Escolha a cidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btChooseEmbasyCity"
                android:background="@color/backgroundGrey" android:layout_marginBottom="16dp"
                android:paddingLeft="16dp" android:paddingRight="16dp"
                android:drawableRight="@drawable/ic_arrow_down_grey" android:visibility="gone"/>
        <Button
                android:text="Escolha a embaixada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btChooseEmbasyEmbassy"
                android:background="@color/backgroundGrey" android:layout_marginBottom="16dp"
                android:paddingRight="16dp" android:paddingLeft="16dp"
                android:drawableRight="@drawable/ic_arrow_down_grey" android:visibility="gone"/>
        <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
                android:text="Avançar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btSaveEmbassy"
                android:background="@drawable/bg_circular_progressbar"
                app:finalCornerAngle="50dp"
                app:initialCornerAngle="0dp"
                app:spinning_bar_color="#FFF"
                app:spinning_bar_padding="6dp"
                android:textColor="@color/colorGrey" android:visibility="gone"/>
        <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pbChooseEmbassy"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>