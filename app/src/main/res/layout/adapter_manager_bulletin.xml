<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="center_vertical"
            android:background="@drawable/bg_white_box" android:paddingRight="16dp" android:paddingLeft="16dp"
            android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp" android:layout_marginLeft="8dp">
        <TextView
                android:text="Nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txtAdBulletinTitle" android:textStyle="bold"
                android:textColor="@color/colorText" android:textSize="16sp"/>
        <TextView
                android:text="Status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txtAdBulletinDescription"
                android:textColor="@color/colorSubText"/>
    </LinearLayout>
</LinearLayout>