<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.Single.EventProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="600dp">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp" app:srcCompat="@drawable/event_cover"
                android:id="@+id/imgEventCover" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:scaleType="centerCrop"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="Mahogany Bridal Fair 2016"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtEventTheme"
                app:layout_constraintTop_toBottomOf="@+id/imgEventCover" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp" android:layout_marginTop="24dp" android:textSize="20dp"
                android:textStyle="bold" android:textColor="@color/colorText"/>
        <TextView
                android:text="SUN, 23 OCT, 4:30 PM BST"
                android:layout_width="0dp"
                android:layout_height="16dp" android:id="@+id/txtEventDate"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/txtEventTheme" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp" android:textColor="@color/colorText"/>
        <Button
                android:text="Confirmar Presença"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btEnrollEvent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp" android:background="@drawable/bt_enroll_select"
                android:textColor="@color/backgroundGrey" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/txtEventDate"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/btEnrollEvent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp" android:gravity="center_vertical" android:id="@+id/linearLayout3">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtCountEnrolled" android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_group_grey_dark" android:drawablePadding="8dp"
                    android:gravity="center_vertical" android:textColor="@color/colorText"
                    tools:text="Nenhuma pessoa confirmada"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|end" android:paddingRight="16dp"
                    android:paddingLeft="16dp">
                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_enrolled_1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/avatar"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FFF" android:layout_marginRight="6dp"
                        android:layout_marginEnd="6dp" android:visibility="gone"/>
                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_enrolled_2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/avatar"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FFF" android:layout_marginRight="6dp"
                        android:layout_marginEnd="6dp" android:visibility="gone"/>
                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_enrolled_3"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/avatar"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FFF" android:layout_marginRight="6dp"
                        android:layout_marginEnd="6dp" android:visibility="gone"/>
                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_enrolled_more"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/avatar"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FFF" android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>
        <View
                android:id="@+id/divider2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
                android:layout_marginTop="24dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
        />
        <TextView
                android:text="Established in 1996, Mahogany International has  many years' experience and is a recognised  brand within the fashion and…"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtEventDescription"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintHorizontal_bias="0.467" app:layout_constraintTop_toBottomOf="@+id/divider2"
                android:layout_marginTop="24dp" android:textColor="@color/colorText"/>
        <View
                android:id="@+id/divider4"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintTop_toBottomOf="@+id/txtEventDescription"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="24dp"/>
        <TextView
                android:text="APRESENTADO POR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView13"
                app:layout_constraintTop_toBottomOf="@+id/divider4" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="16dp"
                android:textSize="14sp" android:textStyle="bold" android:textColor="@color/colorText"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView13" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp" android:id="@+id/linearLayout4">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:gravity="center_vertical"
                    android:paddingLeft="16dp" android:paddingTop="8dp" android:paddingRight="16dp"
                    android:paddingBottom="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/imgEventModerator1"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/avatar"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FFF"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:padding="8dp" android:gravity="center_vertical">
                    <TextView
                            android:text="Nome"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/txtModeratorName1"
                            android:textStyle="bold"
                            android:textColor="@color/colorText" android:textSize="16sp"/>
                    <TextView
                            android:text="Status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/txtModeratorProfession1"
                            android:textColor="@color/colorSubText"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:gravity="center_vertical"
                    android:paddingLeft="16dp" android:paddingTop="8dp" android:paddingRight="16dp"
                    android:paddingBottom="8dp" android:visibility="gone">

                <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/imgEventModerator2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/avatar"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FFF"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:padding="8dp" android:gravity="center_vertical">
                    <TextView
                            android:text="Nome"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/txtModeratorName2"
                            android:textStyle="bold"
                            android:textColor="@color/colorText" android:textSize="16sp"/>
                    <TextView
                            android:text="Área de Atuação"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/txtModeratorProfession2"
                            android:textColor="@color/colorSubText"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <View
                android:id="@+id/divider5"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout4" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
        />
        <TextView
                android:text="LOCALIZAÇÃO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView18"
                app:layout_constraintTop_toBottomOf="@+id/divider5" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="24dp"
                android:textColor="@color/colorText" android:textStyle="bold" android:textSize="14sp"/>
        <TextView
                android:text="The Grand Connaught Rooms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtEventPlace" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView18" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                android:textColor="@color/colorText" android:textStyle="bold"/>
        <TextView
                android:text="61-65 Great Queen St, Holborn, WC2B 5DA  London, United Kingdom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtEventAddress"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txtEventPlace"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/colorText"
                android:layout_marginBottom="32dp"/>

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:id="@+id/map"
                  android:name="com.google.android.gms.maps.SupportMapFragment"
                  android:layout_width="match_parent"
                  android:layout_height="200dp"
                  app:layout_constraintTop_toBottomOf="@+id/txtEventAddress"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"

                  android:layout_marginTop="16dp" android:layout_marginBottom="64dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>