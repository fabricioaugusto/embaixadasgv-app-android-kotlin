<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.Create.CreateToughtActivity"
        android:focusableInTouchMode="true">
    <HorizontalScrollView android:id="@+id/tools"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_alignParentBottom="true"
                          android:scrollbars="none" android:background="@color/colorLink">

        <LinearLayout android:orientation="horizontal"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">

            <ImageButton android:id="@+id/bold"
                         android:contentDescription="@null"
                         android:layout_width="48dp"
                         android:layout_height="48dp"
                         android:src="@drawable/ic_format_bold"
                         android:scaleType="center"
                         android:background="?android:selectableItemBackground">
            </ImageButton>

            <ImageButton android:id="@+id/italic"
                         android:contentDescription="@null"
                         android:layout_width="48dp"
                         android:layout_height="48dp"
                         android:src="@drawable/ic_format_italic"
                         android:scaleType="center"
                         android:background="?android:selectableItemBackground">
            </ImageButton>

            <ImageButton android:id="@+id/link"
                         android:contentDescription="@null"
                         android:layout_width="48dp"
                         android:layout_height="48dp"
                         android:src="@drawable/ic_insert_link"
                         android:scaleType="center"
                         android:background="?android:selectableItemBackground">
            </ImageButton>

            <ImageButton android:id="@+id/clear"
                         android:contentDescription="@null"
                         android:layout_width="48dp"
                         android:layout_height="48dp"
                         android:src="@drawable/ic_format_clear"
                         android:scaleType="center"
                         android:background="?android:selectableItemBackground">
            </ImageButton>

        </LinearLayout>

    </HorizontalScrollView>

    <io.github.mthli.knife.KnifeText
            android:id="@+id/knife"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/tools"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:paddingStart="16dp"
            android:paddingRight="16dp"
            android:paddingEnd="16dp"
            android:gravity="top|start"
            android:scrollbars="vertical"
            android:background="@android:color/transparent"
            app:bulletColor="@color/blue500"
            app:bulletRadius="@dimen/bullet_radius"
            app:bulletGapWidth="@dimen/bullet_gap_width"
            app:historyEnable="true"
            app:historySize="99"
            app:linkColor="@color/blue500"
            app:linkUnderline="true"
            app:quoteColor="@color/blue500"
            app:quoteStripeWidth="@dimen/quote_stripe_width"
            app:quoteCapWidth="@dimen/quote_gap_width" android:hint="Compartilhe aqui o que você está pensando..."
    >
    </io.github.mthli.knife.KnifeText>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layoutFab"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" android:layout_marginBottom="60dp" android:gravity="center_horizontal">
        <io.github.yavski.fabspeeddial.FabSpeedDial
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                app:fabGravity="bottom_end"
                app:fabMenu="@menu/fab_create_thought_menu"
                app:miniFabBackgroundTint="@android:color/white"
                app:miniFabDrawableTint="@color/colorLink"
                app:miniFabTitleTextColor="@color/colorText" android:id="@+id/fabSpeedDial">
        </io.github.yavski.fabspeeddial.FabSpeedDial>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignTop="@+id/knife"
            android:layout_alignParentStart="true" android:layout_marginLeft="0dp" android:layout_marginStart="0dp"
            android:layout_alignParentLeft="true" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="0dp" android:layout_marginEnd="0dp"
            android:layout_marginTop="0dp" android:paddingTop="32dp" android:paddingBottom="32dp"
            android:paddingRight="24dp" android:paddingLeft="24dp"
            android:layout_alignParentBottom="true" android:background="@color/backgroundModal"
            android:gravity="center" android:clickable="true" android:visibility="gone"
            android:id="@+id/layoutToughtModal" android:alpha="0">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:background="@color/backgroundGrey"
                android:paddingLeft="24dp" android:paddingRight="24dp" android:paddingTop="32dp"
                android:paddingBottom="32dp" android:id="@+id/layoutToughtPublish" android:clickable="true"
                android:visibility="gone" android:gravity="center_horizontal">
            <TextView
                    android:text="Tem certeza que deseja publicar este texto?"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView28"
                    android:textColor="@color/colorText"/>
            <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
                    android:text="Publicar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btToughtPublish"
                    app:finalCornerAngle="50dp"
                    app:initialCornerAngle="0dp"
                    app:spinning_bar_color="#FFF"
                    app:spinning_bar_padding="6dp"
                    android:background="@drawable/bg_circular_progressbar"
                    android:textColor="@color/backgroundGrey"
                    android:layout_marginTop="16dp"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>