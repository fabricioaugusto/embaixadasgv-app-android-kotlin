<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.Create.CreateToughtActivity"
        android:focusableInTouchMode="true">

    <TextView
            android:text="Escreva aqui o seu pensamento..."
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtOpenKinfe" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:textColor="@color/colorText"
            android:textSize="15sp" android:paddingTop="8dp" android:paddingBottom="8dp" android:clickable="true"
            android:alpha="0.5"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"/>

    <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
            android:text="Publicar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btToughtPublish"
            app:finalCornerAngle="50dp"
            app:initialCornerAngle="0dp"
            app:spinning_bar_color="#FFF"
            app:spinning_bar_padding="6dp"
            android:background="@drawable/bg_circular_progressbar"
            android:textColor="@color/backgroundGrey"
            app:layout_constraintTop_toBottomOf="@+id/txtOpenKinfe" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp" android:layout_marginTop="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>