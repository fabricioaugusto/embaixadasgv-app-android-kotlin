<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.ChangePassActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center_horizontal" android:paddingLeft="32dp" android:paddingRight="32dp"
            android:paddingTop="32dp" android:paddingBottom="64dp" android:id="@+id/linearLayout5">

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilChangePassCurrent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Senha Atual" android:id="@+id/etChangePassCurrent" android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilChangePassNew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:paddingTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nova Senha" android:id="@+id/etChangePassNew" android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilChangePassConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:paddingTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirmar Senha" android:id="@+id/etChangePassConfirm" android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>
        <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
                android:text="Salvar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:finalCornerAngle="50dp"
                app:initialCornerAngle="0dp"
                app:spinning_bar_color="#FFF"
                app:spinning_bar_padding="6dp"
                android:background="@drawable/bg_circular_progressbar"
                android:id="@+id/btChangePassSavaData"
                android:layout_marginTop="32dp"
                android:textColor="@color/colorGrey"/>
    </LinearLayout>
    
</androidx.constraintlayout.widget.ConstraintLayout>